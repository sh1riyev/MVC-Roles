@model LogInVM

<section id="register">
    <div class="container mt-5">
        <h1 class="text-center">Sign In</h1>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="register-form" style="width:50%; margin:0 auto;background-color:chartreuse;margin-bottom:100px;border-radius:30px "></div>
        <form method="post" asp-action="SignIn">
            <div class="form-group">
                <label for="exampleInputEmail1">Email or Username</label>
                <input asp-for="EmailOrUsename" lass="form-control">
                <span class="text-danger" asp-validation-for="EmailOrUsename"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Password</label>
                <input asp-for="Password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="register-btn d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-success text-white">Sign In</button>

            </div>
            <a asp-action="SignUp">Sign Up</a>
        </form>
    </div>

</section>




