@model CourseCreateVM


@{ViewData["Title"] = "Create"; }

<div class="form-group row">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <h1 class="col-sm-2 col-form-label">Course</h1>
        <div class="col-sm-10">
            <label>Name</label>
            <input asp-for="CourseName"
                   class="form-control form-control-round">
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <div class="col-sm-10">
            <label>Description</label>
            <input asp-for="Description"
                   class="form-control form-control-round">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-sm-10">
            <label>Price</label>
            <input asp-for="Price" type="number" step="any"
                   class="form-control form-control-round">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="col-sm-10">
            <label>Category</label>
            <select asp-validation-for="CategoryId" asp-items="@ViewBag.categories" class="text-danger form-control form-control-round"></select>
        </div>
        <div class="col-sm-10">
            <label>Image</label>
            <input asp-for="NewImage"
                   class="form-control form-control-round">
            <span asp-validation-for="NewImage" class="text-danger"></span>
        </div>
        <div class="buttons mt-5">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>

    </form>
</div>


