@{ViewData["Title"] = "Info"; }
@model CategoryDetailVM



<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            @foreach (var item in Model.Images)
                                { 
                                    <div class="text-center p-4"> <img id="main-image" src="~/img/@item.Image" width="250" /> </div>
                                }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                                <div class="d-flex align-items-center">
                                    <form asp-action="Index">
                                        <i class="fa fa-long-arrow-left"></i>
                                        <span class="ml-1">Back</span>
                                    </form>
                                    </div>
                            <div class="mt-4 mb-3">
                                @foreach (var product in Model.CourseNames)
                                {

                                    <span class="text-uppercase text-muted brand">Category - @Model.CategoryName</span>
                                    <h5 class="text-uppercase">Create Date- @Model.CreateDate</h5>
                                    <div class="price d-flex flex-row align-items-center">
                                        <span class="act-price">Product Count - @Model.CourseNames.Count()</span>
                                        <p>Description - @product</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

